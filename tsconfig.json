{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["ESNext"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./src",
    "removeComments": true,
    "strict": true,
    "moduleResolution": "node",
    "paths": {},
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./src/**/*.spec.ts", "./src/**/*.test.ts"]
}
