{
  "name": "node-ts-template",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:KalleoPinheiro/node-ts-template.git",
  "author": "Kall√©o Pinheiro <kalleopinheiro@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -b",
    "build:watch": "rimraf dist && tsc -w",
    "start": "node ./dist/src/main/server.js",
    "up": "npm run build && docker-compose up",
    "down": "docker-compose down",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9229 --nolazy ./dist/src/main/server.js"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.7.10",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.2"
  }
}
